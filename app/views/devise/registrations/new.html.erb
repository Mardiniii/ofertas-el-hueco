<div class="container headerOffset">
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li> <a href="index.html">Home</a> </li>
        <li class="active"> Autenticación - Registrarse </li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
      <h1 class="section-title-inner"><span><i class="fa fa-lock"></i> Autenticación - Registrarse</span></h1>
      <div class="row userInfo">
        <div class="col-md-12">
          <h2 class="block-title-2"><span>ingresa tus datos para iniciar sesión</span></h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group reg-email">
              <div>
                <%= f.email_field :email, :autofocus => true, class: "form-control input", placeholder: "Email", id: "login-user" %>
              </div>
            </div>
            <div class="form-group reg-password">
              <div>
                <%= f.password_field :password, class: "form-control input", placeholder: "Contraseña - Mínimo 8 caracteres" %>
              </div>
            </div> 
            <div class="form-group reg-password">
              <div>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input", placeholder: "Confirmar contraseña" %>
              </div>
            </div>
            <div >
              <div >
                <%= f.submit "Registrarse", :class => 'btn btn-block btn-lg btn-primary' %>
              </div>
            </div>
            <!--userForm--> 
          <% end %>
          <p class="text-center"> ¿Ya estas registrado? <a data-toggle="modal"  data-dismiss="modal" href="#ModalLogin"> Entra Aqui </a> </p>
        </div> 
      </div>
    </div>
  </div>
</div>