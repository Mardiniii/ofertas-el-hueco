<div class="container headerOffset">
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li> <%= link_to "Home", root_path %></li>
        <li class="active"> Crear un nuevo registro de tienda </li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
      <h1 class="section-title-inner"><span><i class="fa fa-shopping-cart"></i> Información de Registro - Nueva Tienda </span></h1>
      <div class="row userInfo">
        <div class="col-md-12">
          <h2 class="block-title-2"><span>ingresa los datos para proceder con el registro de la tienda</span></h2>

          <%= form_for(@storehouse) do |storehouse| %>

            <div class="form-group reg-email">
              <div>
                <%= storehouse.email_field :email, :autofocus => true, class: "form-control input", placeholder: "Email", id: "login-user" %>
              </div>
            </div>

            <div class="form-group reg-password">
              <div>
                <%= storehouse.password_field :password, class: "form-control input", placeholder: "Contraseña - Mínimo 8 caracteres" %>
              </div>
            </div>

            <div class="form-group reg-password">
              <div>
                <%= storehouse.password_field :password_confirmation, autocomplete: "off", class: "form-control input", placeholder: "Confirmar contraseña" %>
              </div>
            </div>

            <div >
              <div >
                <%= storehouse.submit "Registrarse", :class => 'btn btn-block btn-lg btn-primary' %>
              </div>
            </div>            

          <% end %>          
        </div> 
      </div>
    </div>
  </div>
</div>