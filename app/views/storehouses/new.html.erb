<div class="container headerOffset">
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li> <%= link_to "Home", root_path %></li>
        <li class="active"> Crear un nuevo registro de tienda </li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-sm-8 col-xs-12">
      <h1 class="section-title-inner"><span><i class="fa fa-shopping-cart"></i> Información de Registro - Nueva Tienda </span></h1>
      <div class="row userInfo">
        <div class="col-md-12">
          <h2 class="block-title-2"><span>ingresa los datos para proceder con el registro de la tienda</span></h2>

          <%= form_for(@storehouse) do |storehouse| %>

            <div class="form-group reg-email">
              <div>
                <%= storehouse.text_field :name, :autofocus => true, class: "form-control input", placeholder: "Nombre de la tienda" %>
              </div>
            </div>

            <div class="form-group reg-email">
              <div>
                <%= storehouse.text_field :address, :autofocus => true, class: "form-control input", placeholder: "Dirección de la tienda" %>
              </div>
            </div>

            <div class="form-group reg-email">
              <div>
                <%= storehouse.email_field :email, class: "form-control input", placeholder: "Email", id: "login-user" %>
              </div>
            </div>

            <div class="form-group reg-email">
              <div>
                <%= storehouse.text_area :description, :autofocus => true, class: "form-control input", rows: 5,placeholder: "Descripción de la tienda" %>
              </div>
            </div>

            <div class="form-group reg-email">
              <div>
                <%= storehouse.email_field :telephone, class: "form-control input", placeholder: "Telefono" %>
              </div>
            </div>

            <div class="form-group reg-email">
              <div>
                <%= storehouse.email_field :whatsapp, class: "form-control input", placeholder: "WhatsApp" %>
              </div>
            </div>

            <div >
              <div >
                <%= storehouse.submit "Registrarse", :class => 'btn btn-block btn-lg btn-primary' %>
              </div>
            </div>            

          <% end %>          
        </div> 
      </div>
    </div>
  </div>
</div>