<div class="container headerOffset">
  <div class="row">
  	<div class="breadcrumbDiv col-lg-12">
    	<ul class="breadcrumb">
      	<li> <%= link_to "Home", root_path %></li>
      	<li class="active"> Crear Un Nuevo Artículo para su tienda </li>
    	</ul>
  	</div>
	</div>

  <div class="row">
    <div class="col-lg-10 col-md-10 col-sm-7">
      <h1 class="section-title-inner"><span><i class="glyphicon glyphicon-shopping-cart"></i> Lista de Artículos Registrados </span></h1>
      <div class="row userInfo">
        <div class="col-lg-12">
          <h2 class="block-title-2"> Estos son los artículos que tienes registrados en nuestra plataforma: </h2>
        </div>
        <div class="col-xs-12 col-sm-12">
          <table>
            <tbody>

						<% @articles.each do |article| %>

							<tr class="CartProduct">
                <td style="width:10%" class="CartProductThumb">
                  <div> <a href="<%= storehouses_article_path(article) %>"><img src="<%= article.article_images.first.image.url %>" alt="img"></a> </div></td>
                <td style="width:30%"><div class="CartDescription">
                    <h4> <a href="product-details.html"><%= article.name %> </a> </h4>
                    <span><%= article.subtitle %></span>
                    <div class="price"> <span><%= number_to_currency(article.price, precision: 0) %></span> </div>
                  </div></td>
                <td style="width:60%">
                    <%= link_to "<i class='glyphicon glyphicon-eye-open fa-2x'></i>".html_safe, storehouses_article_path(article.id), class: "btn btn-success", title: "Ver Producto" %>
                    <%= link_to "<i class='glyphicon glyphicon-edit fa-2x'></i>".html_safe, edit_storehouses_article_path(article.id), class: "btn btn-warning", title: "Editar Producto" %>
                    <%= link_to storehouses_article_path(article.id), title: "Eliminar Producto", method: :delete, data: { confirm: '¿Esta seguro que desea eliminar el curso?' }, class: "btn btn btn-ar btn-danger" do %><span><i class='glyphicon glyphicon-trash fa-2x'></i></span><% end %>
                </td>                
              </tr>

						<% end %>                                      
            </tbody>
          </table>
        </div>
        
        <div class="col-lg-12 clearfix">
          <ul class="pager">
            <li class="previous pull-right"><%= link_to "<i class='fa fa-home'></i> Regresar a la Tienda".html_safe, root_path %></li>


            <li class="next pull-left"><%= link_to "&larr; Crear Un Nuevo Artículo".html_safe, new_storehouses_article_path %></li>
          </ul>
        </div>
        
      </div>
      <!--/row end--> 
      
    </div>
    <div class="col-lg-3 col-md-3 col-sm-5"> </div>
  </div>
  <!--/.row-->
</div>

