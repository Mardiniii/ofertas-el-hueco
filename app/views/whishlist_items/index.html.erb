
<div class="container main-container headerOffset">
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li> <a href="index.html">Home</a> </li>
        <li> <a href="account.html">Mi cuenta</a> </li>
        <li class="active"> Mis favoritos </li>
      </ul>
    </div>
  </div> <!--/.row-->

  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <h1 class="section-title-inner"><span><i class="glyphicon glyphicon-heart"></i> Favoritos </span></h1>
      <div class="row userInfo">
        <div class="col-lg-12">
          <h2 class="block-title-2">Actualiza tus favoritos si han cambiado.</h2>
        </div>
        <div class="col-xs-12 col-sm-12">
          <table>
            <tbody>

              <% @whishlist_items.each do |item| %>

              <tr class="CartProduct">
                <td style="width:10%" id="item-<%= item.id  %>" class="CartProductThumb">
                  <div>
                    <%= link_to "<img src=' #{item.article.article_images.first.image.url}' alt='img'>".html_safe , storehouses_article_path( item.article)  %>
                  </div>
                </td>
                <td style="width:40%"><div class="CartDescription">
                  <h4>
                    <%= link_to item.article.name , storehouses_article_path( item.article )  %>
                  </h4>
                  <span class="size"><%= item.article.code %></span>
                  <div class="price"> <span>$<%=  item.article.price %></span> </div>
                </div></td>
                <td style="width:15%">
                  <a class="btn btn-primary">
                    <span class="add2cart">
                      <!-- <i class="glyphicon glyphicon-shopping-cart"> </i>  -->
                      Información de vendedor
                    </span>
                  </a>
                </td>
                <td style="width:40%" class="delete">

                  <%= link_to '<i class="glyphicon glyphicon-trash fa-2x"></i> '.html_safe, whishlist_item_path(item.id),
                  method: :delete,
                  data: { confirm: '¿seguro que quieres borrarlo?' } %>
                </td>
              </tr>
              <% end %>

              <tr class="CartProduct">
                <td style="width:10%"></td>
                <td style="width:40%"></td>
                <td style="width:15%">
                  <h2>Subtotal:</h2>
                </td>
                <td style="width:40%">
                  <h2><%= favorite_total_price %></h2>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

      <!--   <div class="col-lg-12 clearfix">
          <ul class="pager">
            <li class="previous pull-right"><a href="index.html"> <i class="fa fa-home"></i> Go to Shop </a></li>
            <li class="next pull-left"><a href="account.html"> &larr; Back to My Account</a></li>
          </ul>
        </div> -->

      </div>
      <!--/row end-->

    </div>
    <div class="col-lg-3 col-md-3 col-sm-5"> </div>
  </div>
  <!--/.row-->
  <div style="clear:both"></div>
</div> <!-- /main-container -->

<div class="gap"> </div>
