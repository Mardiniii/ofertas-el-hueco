<!-- Modal Login start -->
<div class="modal signUpContent fade" id="ModalLogin" tabindex="-1" role="dialog" >
  <div class="modal-dialog ">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> &times; </button>
        <h3 class="modal-title-site text-center" > INICIAR SESIÃ“N </h3>
      </div>
      <div class="modal-body">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <div class="form-group login-username">
            <div>
              <%= f.email_field :email, :autofocus => true, class: "form-control input", placeholder: "Enter Email", id: "login-user" %>
            </div>
          </div>
          
          <div class="form-group login-password">
            <div>
              <%= f.password_field :password, class: "form-control input", placeholder: "Enter Password", id: "login-password" %>
            </div>
          </div>          
          <div class="form-group">
            <div >
              <div class="checkbox login-remember">
                <label>
                  <% if devise_mapping.rememberable? -%>                  
                    <%= f.check_box :remember_me %> Remember Me                                   
                  <% end -%>
                </label> 
              </div>
            </div>
          </div>
          
          <div>
            <div>
              <%= f.submit "Sign in", :class => 'btn btn-block btn-lg btn-primary' %>
            </div>
          </div>
          <!--userForm--> 
        <% end %>
      </div>
      <div class="modal-footer">
        <p class="text-center"> Not here before? <a data-toggle="modal"  data-dismiss="modal" href="#ModalSignup"> Sign Up. </a> <br>
          <%= link_to "Lost your password?", new_user_password_path %></p>
      </div>
    </div>
    <!-- /.modal-content --> 
    
  </div>
  <!-- /.modal-dialog --> 
  
</div>
<!-- /.Modal Login --> 