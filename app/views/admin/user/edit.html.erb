<div class="container headerOffset">
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li> <%= link_to "Home", root_path %></li>
        <li> <%= link_to "Gestor de Tiendas", new_admin_user_path %></li>
        <li> <%= link_to "Tiendas Registradas", admin_user_index_path %> </li>
        <li class="active">Editar tienda</li>
      </ul>
    </div>
  </div>
  <%= form_for(@user, url: admin_user_index_path) do |user| %>
          <%= user.fields_for :storehouse do |storehouse| %>
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
              <h1 class="section-title-inner"><span><i class="fa fa-shopping-cart"></i> Información de Tienda - Editar Tienda </span></h1>
              <h2 class="block-title-2"><span>Ingresa los datos que quieras modificar de la tienda</span></h2>

              <div class="form-group reg-email">
                <div>
                  <%= storehouse.text_field :name, :autofocus => true, class: "form-control input", placeholder: "Nombre de la tienda" %>
                </div>
              </div>

              <div class="form-group reg-email">
                <div>
                  <%= storehouse.label :avatar, "IMAGEN DE LA TIENDA:" %>
                  <%= storehouse.file_field :avatar, required: true, class: "input-file" %>
                </div>
              </div>

              <div class="form-group reg-email">
                <div>
                  <%= storehouse.text_field :address, :autofocus => true, class: "form-control input", placeholder: "Dirección de la tienda" %>
                </div>
              </div>

              <div class="form-group reg-email">
                <div>
                  <%= storehouse.email_field :email, class: "form-control input", placeholder: "Email", id: "login-user" %>
                </div>
              </div>

              <div class="form-group reg-email">
                <div>
                  <%= storehouse.text_area :description, :autofocus => true, class: "form-control input", rows: 5,placeholder: "Descripción de la tienda" %>
                </div>
              </div>

              <div class="form-group reg-email">
                <div>
                  <%= storehouse.text_field :telephone, class: "form-control input", placeholder: "Telefono" %>
                </div>
              </div>

              <div class="form-group reg-email">
                <div>
                  <%= storehouse.text_field :whatsapp, class: "form-control input", placeholder: "WhatsApp" %>
                </div>
              </div>
            </div>
          <% end %>
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <%= user.submit "Actualizar Tienda", :class => 'btn btn-block btn-lg btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>