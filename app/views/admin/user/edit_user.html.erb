<div class="container headerOffset">
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li> <%= link_to "Home", root_path %></li>
        <li class="active"> Editar Información de Usuario </li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
      <h1 class="section-title-inner"><span><i class="fa fa-lock"></i> Actualización de datos</span></h1>
      <div class="row userInfo">
        <div class="col-md-12">          
          <h2 class="block-title-2"><span>o ingresa tus datos personales para que sean actualizados</span></h2>
          <%= form_for(@user,  url: {action: "update_user", params: {id: @user.id}}) do |f| %>            
            <div class="form-group reg-email">
              <div>
                <%= f.email_field :email, :autofocus => true, class: "form-control input", placeholder: "Email", id: "login-user" %>
              </div>
            </div>

            <% unless current_user.admin? %>
							<div class="form-group reg-password">
							  <div>
							    <%= f.password_field :password, class: "form-control input", placeholder: "Contraseña - Mínimo 8 caracteres" %>
							  </div>
							</div> 
							<div class="form-group reg-password">
							  <div>
							    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input", placeholder: "Confirmar contraseña" %>
							  </div>
							</div>
            <% end %>            
            <div >
              <div >
                <%= f.submit "Editar Información de Usuario", :class => 'btn btn-block btn-lg btn-primary' %>
              </div>
            </div>
            <!--userForm--> 
          <% end %>
        </div> 
      </div>
    </div>
  </div>
</div>