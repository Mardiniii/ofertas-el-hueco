<div class="container headerOffset">
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li> <%= link_to "Home", root_path %></li>
        <li class="active"> Crear un nuevo registro de tienda  </li>
      </ul>
    </div>
  </div>                    
  <%= form_for(@user, url: admin_user_index_path) do |user| %>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="row userInfo">
          <div class="col-md-6 col-sm-6 col-xs-12">
            <h1 class="section-title-inner"><span><i class="fa fa-lock"></i> Autenticación - Registrar Propietario de la tienda</span></h1>
            <h2 class="block-title-2"><span>ingresa los datos de usuario, este sera propietario del establecimiento y accedera a la plataforma con la siguiente información</span></h2>

            <div class="form-group reg-email">
              <div>
                <%= user.email_field :email, :autofocus => true, class: "form-control input", placeholder: "Email", id: "login-user" %>
              </div>
            </div>

            <div class="form-group reg-password">
              <div>
                <%= user.password_field :password, class: "form-control input", placeholder: "Contraseña - Mínimo 8 caracteres" %>
              </div>
            </div> 

            <div class="form-group reg-password">
              <div>
                <%= user.password_field :password_confirmation, autocomplete: "off", class: "form-control input", placeholder: "Confirmar contraseña" %>
              </div>
            </div> 
          </div> 
          <%= user.fields_for :storehouse do |storehouse| %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <h1 class="section-title-inner"><span><i class="fa fa-shopping-cart"></i> Información de Registro - Nueva Tienda </span></h1>                      
              <h2 class="block-title-2"><span>ingresa los datos para proceder con el registro de la tienda</span></h2>
            
              <div class="form-group reg-email">
                <div>
                  <%= storehouse.text_field :name, :autofocus => true, class: "form-control input", placeholder: "Nombre de la tienda" %>
                </div>
              </div>

              <div class="form-group reg-email">
                <div>
                  <%= storehouse.label :avatar, "IMAGEN DE LA TIENDA:" %>
                  <%= storehouse.file_field :avatar, required: true, class: "input-file" %>
                </div>
              </div>

              <div class="form-group reg-email">
                <div>
                  <%= storehouse.text_field :address, :autofocus => true, class: "form-control input", placeholder: "Dirección de la tienda" %>
                </div>
              </div>

              <div class="form-group reg-email">
                <div>
                  <%= storehouse.email_field :email, class: "form-control input", placeholder: "Email", id: "login-user" %>
                </div>
              </div>

              <div class="form-group reg-email">
                <div>
                  <%= storehouse.text_area :description, :autofocus => true, class: "form-control input", rows: 5,placeholder: "Descripción de la tienda" %>
                </div>
              </div>

              <div class="form-group reg-email">
                <div>
                  <%= storehouse.text_field :telephone, class: "form-control input", placeholder: "Telefono" %>
                </div>
              </div>

              <div class="form-group reg-email">
                <div>
                  <%= storehouse.text_field :whatsapp, class: "form-control input", placeholder: "WhatsApp" %>
                </div>
              </div>        
            </div>   
          <% end %>
          <div class="row">
            <div class="col-md-8 col-md-offset-2">
              <%= user.submit "Registrar Nueva Tienda", :class => 'btn btn-block btn-lg btn-primary' %>
            </div>
          </div> 
        </div>
      </div>                                 
    </div>
  <% end %>
</div> 